<div class="password-send-div">
  <h2 style="font-size: 40px;">Change your password</h2>

  <div class="password-reset-container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <%= f.hidden_field :reset_password_token %>
      <div class='password-reset-fields-div'>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", :class => 'input' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm New Password", :class => 'input' %>
        <%= f.submit "Change my password", :class => 'button', :style => "margin-top: 4rem; font-size: 10px" %>
      </div>
    <% end %>
  </div>
</div>
