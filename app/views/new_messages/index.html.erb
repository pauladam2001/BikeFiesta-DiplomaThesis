<div class="main-page-div">
  <h1 class="h1-title">New Messages</h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th class="header-cell">Notifications</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0">
      <tbody>
        <% @unread_rooms.each do |room| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <% if room.is_private %>
                You have unread messages in the private chat with <%= link_to room.participants.where.not(user_id: current_user.id).first.user.full_name, room, data: { turbo: "false" } %>.
              <% else %>
                You have unread messages in <%= link_to room.name, room, data: { turbo: "false" } %>.
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination" data-turbo="false">
      <%= will_paginate @unread_rooms %>
    </div>
  </div>
</div>
