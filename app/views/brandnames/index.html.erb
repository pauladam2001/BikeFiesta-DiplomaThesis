<div class="main-page-div">
  <h1 class="h1-title">Brand Names</h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @brand_names.each do |brand_name| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <%= brand_name.name %>
            </td>
            <td>
              <%= link_to brandname_path(brand_name), method: :delete, class: "links-class", data: {confirm: "Are you sure you want to delete this brand name?"} do %>
                Delete
              <% end %>
              â€¢
              <%= link_to edit_brandname_path(brand_name), class: "links-class" do %>
                Edit
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination">
      <%= will_paginate @brand_names %>
    </div>
  </div>
  <%= button_to "Add New Brand Name", new_brandname_path, method: :get, :class => "button add-link" %>
</div>
