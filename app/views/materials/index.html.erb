<div class="main-page-div">
  <h1 class="h1-title">Materials</h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @materials.each do |material| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <%= material.name %>
            </td>
            <td>
              <%= link_to material_path(material), method: :delete, class: "links-class", data: {confirm: "Are you sure you want to delete this material?"} do %>
                Delete
              <% end %>
              â€¢
              <%= link_to edit_material_path(material), class: "links-class" do %>
                Edit
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination">
      <%= will_paginate @materials %>
    </div>
  </div>
  <%= button_to "Add New Material", new_material_path, method: :get, :class => "button add-link" %>
</div>
