<div class="main-page-div">
  <h1 class="h1-title">Components</h1>
  <div class="filter-first-div">
    <div class="filter-second-div">
      <form>
        <div class="filter-option-div">
          <span class="filter-span">Filter by Name</span>
          <br/>
          <input type="text" name="name" value="<%= params[:name] %>" class="filter-input">
        </div>
        <div style="float: left;">
          <input type="submit" name="submitButton" class="button" style="margin-top: 1.2rem;" value="Search" data-turbo="false"/>
        </div>
      </form>
    </div>
  </div>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th class="header-cell">Name</th>
          <th class="header-cell">Actions</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0">
      <tbody>
        <% @components.each do |component| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <%= component.name %>
            </td>
            <td>
              <%= button_to component_group_path(component), method: :delete, class: "button-to-style", form_class: "button-to-form", data: {confirm: "Are you sure you want to delete this component?", turbo: "false"} do %>
                Delete
              <% end %>
              â€¢
              <%= link_to edit_component_group_path(component), class: "links-class", data: { turbo: "false" } do %>
                Edit
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination" data-turbo="false">
      <%= will_paginate @components %>
    </div>
  </div>
  <%= button_to "Add New Component", new_component_group_path, method: :get, :class => "button add-link", data: { turbo: "false" } %>
</div>
