<div class="main-page-div">
  <h1 class="h1-title">Components</h1>
  <div class="filter-first-div">
    <div class="filter-second-div">
      <form>
        <div class="filter-option-div">
          <span class="filter-span">Filter by Name</span>
          <br/>
          <input type="text" name="name" value="<%= params[:name] %>" class="filter-input">
        </div>
        <div style="float: left;">
          <input type="submit" name="submitButton" class="filter-submit" value="Search"/>
        </div>
      </form>
    </div>
  </div>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @components.each do |component| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <%= component.name %>
            </td>
            <td>
              <%= link_to component_group_path(component), method: :delete, class: "links-class", data: {confirm: "Are you sure you want to delete this component?"} do %>
                Delete
              <% end %>
              â€¢
              <%= link_to edit_component_group_path(component), class: "links-class" do %>
                Edit
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination">
      <%= will_paginate @components %>
    </div>
  </div>
  <%= button_to "Add New Component", new_component_group_path, method: :get, :class => "button add-link" %>
</div>
