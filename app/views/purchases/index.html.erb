<div class="main-page-div">
  <h1 class="h1-title">Purchases</h1>
  <div class="filter-first-div">
    <div class="filter-second-div">
      <form>
        <div class="filter-option-div">
          <span class="filter-span">Not Shipped / Shipped</span>
          <select id="shiped" name="shipped" class="filter-select">
            <%= options_for_select([["Not Shipped", "false"], ["Shipped", "true"]], params[:shipped]) %>
          </select>
        </div>
        <div class="filter-option-div">
          <span class="filter-span">With Proof / Without Proof</span>
          <select id="proof" name="proof" class="filter-select">
            <%= options_for_select([["With Proof", "true"], ["Without Proof", "false"]], params[:proof]) %>
          </select>
        </div>
        <div style="float: left;">
          <input type="submit" name="submitButton" class="filter-submit" value="Search"/>
        </div>
      </form>
    </div>
  </div>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Date</th>
          <th>Proof</th>
          <th>Seller - Buyer - Post - Amount</th>
          <th>Shipping Details</th>
          <th>Actions</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @purchases.each do |purchase| %>
          <tr class="<%= cycle("bg-white", "bg-gray") %>">
            <td>
              <%= purchase.created_at.strftime("%d/%m/%y") %>
              <% if purchase.status == "CAPTURED" %>
                <span style="padding-top: 0.1em; padding-bottom: 0.1rem" class="admin-label">Shipped</span>
              <% end %>
              <% if purchase.status == "AUTHORIZED_PROOF" %>
                <span style="padding-top: 0.1em; padding-bottom: 0.1rem; background-color: orange;" class="admin-label">Proof</span>
              <% end %>

              <% if purchase.on_hold %>
                <span style="padding-top: 0.1em; padding-bottom: 0.1rem; background-color: yellow;" class="admin-label">On Hold</span>
              <% end %>
            </td>
            <td style="width: 20%;">
              <% if purchase&.proof&.url.present? %>
                <%= image_tag(purchase.proof.url, border: 0, width: '100%', height: '100%', :class => "") %>
              <% else %>
              <p>No proof yet</p>
              <% end %>
            </td>
            <td style="width: 20%;">
              <%= purchase.seller.full_name %> - <%= purchase.buyer.full_name %> - <%= link_to purchase.post.name, post_path(purchase.post), data: { turbo: "false" } %> - <%= number_to_currency(purchase.amount, precision: 2, :unit => '€') %>
            </td>
            <td style="width: 20%;">
              <%= purchase.shipping_details %>
            </td>
            <td>
              <% if purchase.status != "CAPTURED"%>
                <% if purchase.status == "AUTHORIZED_PROOF" && !purchase.on_hold %>
                  <%= link_to mark_as_shipped_purchase_path(purchase), class: "links-class", method: :put, data: {confirm: "Are you sure you want to mark this purchase as shipped?"} do %>
                    Mark as Shipped
                  <% end %>
                  <br/>
                  •
                  <br/>
                <% end %>
                <%= link_to cancel_purchase_purchase_path(purchase), class: "links-class", method: :put, data: {confirm: "Are you sure you want to delete this purchase?"} do %>
                  Cancel Purchase
                <% end %>
                <br/>
                •
                <br/>
                <% if purchase.on_hold %>
                  <%= link_to mark_off_hold_purchase_path(purchase), class: "links-class", method: :put do %>
                    Mark Off Hold
                  <% end %>
                <% else %>
                  <%= link_to mark_on_hold_purchase_path(purchase), class: "links-class", method: :put do %>
                    Mark On Hold
                  <% end %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
      </tbody>
    </table>
    <div class="pagination" data-turbo="false">
      <%= will_paginate @purchases %>
    </div>
  </div>
</div>
